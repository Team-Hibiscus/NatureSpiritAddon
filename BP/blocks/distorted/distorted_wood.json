{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "nature:distorted_log",
			"properties": {
				"custom:texture": [
					0,
					1
				],
				"custom:facing_direction": [
					0,
					1,
					2
				]
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('custom:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('custom:facing_direction') == 1",
				"components": {
					"minecraft:rotation": [
						90,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('custom:facing_direction') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						90
					]
				}
			},
			{
				"condition": "query.block_property('custom:texture') == 1",
				"components": {
					"minecraft:loot": "loot_tables/blocks/wood/stripped_log_distorted.json",
					"minecraft:material_instances": {
						"up": {
							"texture": "stripped_distorted_log_top",
							"render_method": "opaque"
						},
						"down": {
							"texture": "stripped_distorted_log_top",
							"render_method": "opaque"
						},
						"side": {
							"texture": "stripped_distorted_log",
							"render_method": "opaque"
						},
						"north": "side",
						"south": "side",
						"west": "side",
						"east": "side"
					}
				}
			}
		],
		"components": {
			"tag:wood":{},
			"minecraft:flammable": {
				"burn_odds": 5,
				"flame_odds": 5
			},
			"minecraft:loot": "loot_tables/blocks/wood/log_distorted.json",
			"minecraft:unit_cube": {},
			"minecraft:destroy_time": 1,
			"minecraft:on_player_destroyed": {
				"event": "update_leaves"
			},
			"minecraft:material_instances": {
				"up": {
					"texture": "distorted_log_top",
					"render_method": "opaque"
				},
				"down": {
					"texture": "distorted_log_top",
					"render_method": "opaque"
				},
				"side": {
					"texture": "distorted_log",
					"render_method": "opaque"
				},
				"north": "side",
				"south": "side",
				"west": "side",
				"east": "side"
			},
			"minecraft:creative_category": {
				"group": "itemGroup.name.log",
				"category": "nature"
			},
			"minecraft:on_interact": {
				"condition": "q.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_axe')",
				"event": "update_texture"
			},
			"minecraft:on_player_placing": {
				"event": "update_facing_direction"
			}
		},
		"events": {
			"update_facing_direction": {
				"set_block_property": {
					"custom:facing_direction": "math.floor(query.cardinal_block_face_placed_on / 2.0)"
				}
			},
			"update_texture": {
				"set_block_property": {
					"custom:texture": 1
				},
				"damage": {
					"amount": 1,
					"type": "durability",
					"target": "item"
				}
			},
			"update_leaves": {
				"run_command": {
					"command": [
						"fill ~3 ~-3 ~3 ~-3 ~3 ~-3 nature:distorted_leaves [\"direction\":1] replace nature:distorted_leaves [\"direction\":0]"
					]
				}
			}
		}
	}
}