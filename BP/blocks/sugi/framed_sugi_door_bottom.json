{
  "format_version": "1.20.10",
  "minecraft:block": {
    "description": {
      "identifier": "nature:framed_sugi_door_bottom",
      "menu_category": {
        "category": "none"
      },
      "properties": {
        "nature:is_open": [
          false,
          true
        ],
        "nature:direction": [
          0,
          1,
          2,
          3
        ],
        "nature:top_refresh": [
          false,
          true
        ]
      }
    },
    "components": {
      "minecraft:material_instances": {
        "*": {
          "texture": "framed_sugi_door_bottom",
          "render_method": "alpha_test",
          "face_dimming": true,
          "ambient_occlusion": false
        }
      },
      "minecraft:placement_filter": {
        "conditions": [
          {
            "allowed_faces": [
              "up"
            ],
            "block_filter": [
              {
                "tags": "!query.any_tag('nature_framed_sugi_door')"
              }
            ]
          }
        ]
      },
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 0.5
      },
      "minecraft:on_player_placing": {
        "event": "nature:set_direction"
      },
      "minecraft:on_placed": {
        "event": "nature:setup"
      },
      "minecraft:on_player_destroyed": {
        "event": "nature:reset_top"
      },
      "minecraft:geometry": {
        "identifier": "geometry.door",
        "bone_visibility": {
          "closed": "query.block_state('nature:is_open') == false",
          "open": "query.block_state('nature:is_open') == true"
        }
      },
      "minecraft:loot": "loot_tables/blocks/door_framed_sugi.json",
      "minecraft:map_color": "#52221D",
      "minecraft:light_dampening": 10,
      "tag:nature_framed_sugi_door": {},
      "tag:wood": {}
    },
    "permutations": [
      {
        "condition": "query.block_state('nature:direction') == 0",
        "components": {
          "minecraft:transformation": {
            "rotation": [
              0,
              180,
              0
            ]
          }
        }
      },
      {
        "condition": "query.block_state('nature:direction') == 1",
        "components": {
          "minecraft:transformation": {
            "rotation": [
              0,
              0,
              0
            ]
          }
        }
      },
      {
        "condition": "query.block_state('nature:direction') == 2",
        "components": {
          "minecraft:transformation": {
            "rotation": [
              0,
              270,
              0
            ]
          }
        }
      },
      {
        "condition": "query.block_state('nature:direction') == 3",
        "components": {
          "minecraft:transformation": {
            "rotation": [
              0,
              90,
              0
            ]
          }
        }
      },
      {
        "condition": "query.block_state('nature:is_open') == 0",
        "components": {
          "minecraft:on_interact": {
            "event": "nature:open_door"
          },
          "minecraft:collision_box": {
            "origin": [
              -8,
              0,
              -8
            ],
            "size": [
              16,
              16,
              3
            ]
          },
          "minecraft:selection_box": {
            "origin": [
              -8,
              0,
              -8
            ],
            "size": [
              16,
              16,
              3
            ]
          },
          "tag:nature:closed_framed_sugi_door": {}
        }
      },
      {
        "condition": "query.block_state('nature:is_open') == 1",
        "components": {
          "minecraft:on_interact": {
            "event": "nature:close_door"
          },
          "minecraft:collision_box": {
            "origin": [
              -8,
              0,
              -8
            ],
            "size": [
              3,
              16,
              16
            ]
          },
          "minecraft:selection_box": {
            "origin": [
              -8,
              0,
              -8
            ],
            "size": [
              3,
              16,
              16
            ]
          },
          "tag:nature:open_framed_sugi_door": {}
        }
      }
    ],
    "events": {
      "nature:set_direction": {
        "sequence": [
          {
            "set_block_property": {
              "nature:direction": "query.cardinal_facing_2d-2"
            }
          }
        ]
      },
      "nature:setup": {
        "sequence": [
          {
            "condition": "query.block_state('nature:top_refresh')==false",
            "trigger": {
              "event": "nature:set_upper_block",
              "target": "self"
            }
          },
          {
            "condition": "query.block_state('nature:top_refresh')==true",
            "set_block_property": {
              "nature:top_refresh": false
            }
          }
        ]
      },
      "nature:set_upper_block": {
        "sequence": [
          {
            "condition": "query.block_state('nature:direction')==0&&query.block_state('nature:is_open')==false",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=0, \"nature:is_open\"=false]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==1&&query.block_state('nature:is_open')==false",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=1, \"nature:is_open\"=false]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==2&&query.block_state('nature:is_open')==false",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=2, \"nature:is_open\"=false]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==3&&query.block_state('nature:is_open')==false",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=3, \"nature:is_open\"=false]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==0&&query.block_state('nature:is_open')==true",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=0, \"nature:is_open\"=true]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==1&&query.block_state('nature:is_open')==true",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=1, \"nature:is_open\"=true]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==2&&query.block_state('nature:is_open')==true",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=2, \"nature:is_open\"=true]"
              ]
            }
          },
          {
            "condition": "query.block_state('nature:direction')==3&&query.block_state('nature:is_open')==true",
            "run_command": {
              "command": [
                "setblock ~~1~ nature:framed_sugi_door_top [\"nature:direction\"=3, \"nature:is_open\"=true]"
              ]
            }
          }
        ]
      },
      "nature:close_door": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "playsound random.door_close @a ~ ~ ~"
              ]
            }
          },
          {
            "set_block_property": {
              "nature:is_open": 0
            }
          },
          {
            "trigger": {
              "event": "nature:set_upper_block",
              "target": "self"
            }
          }
        ]
      },
      "nature:open_door": {
        "sequence": [
          {
            "run_command": {
              "command": [
                "playsound random.door_open @a ~ ~ ~"
              ]
            }
          },
          {
            "set_block_property": {
              "nature:is_open": 1
            }
          },
          {
            "trigger": {
              "event": "nature:set_upper_block",
              "target": "self"
            }
          }
        ]
      },
      "nature:reset_top": {
        "run_command": {
          "command": [
            "setblock ~~1~ air"
          ]
        }
      }
    }
  }
}